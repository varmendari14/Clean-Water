<?xml version="1.0" encoding="utf-8"?>
<!--Author: Violet-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView android:id="@+id/waterreportscreen"
        android:contentDescription="Water Report Screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@mipmap/profile_bkg"
        android:scaleType="centerCrop"
        tools:ignore="HardcodedText" />

    <ImageView
        android:contentDescription="Back Button"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/backbutton_phases"
        android:id="@+id/waterReport_backbutton_imageView"
        android:alpha=".75"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <ImageView
        android:contentDescription="Back Button"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/button_phases"
        android:id="@+id/waterReport_sourceReport_imageView"
        android:alpha=".75"
        android:layout_below="@+id/sourceReportChoice_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:contentDescription="Availability Button"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/button_phases"
        android:id="@+id/waterReport_avalabilityReport_imageView"
        android:alpha=".75"
        android:layout_below="@+id/waterReport_sourceReport_imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:contentDescription="Report Button"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/button_phases"
        android:id="@+id/waterReport_purityReport_imageView"
        android:alpha=".75"
        android:layout_below="@+id/waterReport_avalabilityReport_imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Availability Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waterReport_avalabilityReport_textView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:alpha=".75"
        android:layout_marginBottom="28dp"
        android:layout_alignBottom="@+id/waterReport_avalabilityReport_imageView"
        android:layout_alignEnd="@+id/sourceReportChoice_title"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Purity Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waterReport_purityReport_textView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:alpha=".75"
        android:layout_marginBottom="27dp"
        android:layout_alignBottom="@+id/waterReport_purityReport_imageView"
        android:layout_alignStart="@+id/waterReport_sourceReport_textView"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Reports"
        android:id="@+id/sourceReportChoice_title"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Source Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waterReport_sourceReport_textView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:alpha=".75"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/waterReport_avalabilityReport_imageView"
        android:layout_alignStart="@+id/waterReport_avalabilityReport_textView"
        tools:ignore="HardcodedText" />

</RelativeLayout>