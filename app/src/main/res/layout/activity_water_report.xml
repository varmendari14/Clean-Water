<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.otteramazement.clean_water.WaterReportActivity">

    <ImageView android:id="@+id/waterreportscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@mipmap/profile_bkg"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/backbutton_phases"
        android:id="@+id/waterReport_backbutton_imageView"
        android:alpha=".75"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/button_phases"
        android:id="@+id/waterReport_sourceReport_imageView"
        android:alpha=".75"
        android:layout_below="@+id/waterReport_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:text="Source Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waterReport_sourceReport_textView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:alpha=".75"
        android:layout_marginBottom="24dp"
        android:layout_alignBottom="@+id/waterReport_sourceReport_imageView"
        android:layout_alignEnd="@+id/waterReport_backbutton_imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Reports"
        android:id="@+id/waterReport_title"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>