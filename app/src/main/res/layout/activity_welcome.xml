<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.otteramazement.clean_water.LoginActivity">

    <ImageView android:id="@+id/welcomescreenbkg"
        android:contentDescription="Welcome Screen"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/welcome_screen_bkg7"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        tools:ignore="HardcodedText" />
    <ImageView android:id="@+id/welcomescreenover"
        android:contentDescription="Welcome Screen Text"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/welcome_screen_over"
        android:layout_gravity="center"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/welcome_loginbutton"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/buttonLayout"
        android:layout_alignRight="@+id/buttonLayout"
        android:background="@drawable/button_phases"/>

    <ImageView
        android:contentDescription="Login Button"
        android:id="@+id/login_imageView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/button_phases"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:alpha=".75"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/welcome_loginbutton_textView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Login"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/login_imageView"
        android:layout_centerHorizontal="true"
        android:alpha=".75"
        tools:ignore="HardcodedText" />

    <!--<Button-->
        <!--android:text="Register"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:alpha=".75"-->
        <!--android:id="@+id/welcome_register"-->
        <!--style="@style/Widget.AppCompat.Button.Colored"-->
        <!--android:background="@android:drawable/alert_dark_frame"-->
        <!--android:layout_below="@+id/imageView"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="34dp" />-->

    <Button
        android:id="@+id/welcome_registerbutton"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/buttonLayout"
        android:layout_alignRight="@+id/buttonLayout"
        android:background="@drawable/button_phases"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <ImageView
        android:contentDescription="Register Button"
        android:id="@+id/register_imageView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/button_phases"
        android:alpha=".75"
        android:layout_below="@+id/login_imageView"
        android:layout_toEndOf="@+id/welcome_loginbutton"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/welcome_registerbutton_textView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Register"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:alpha=".75"
        android:layout_alignTop="@+id/register_imageView"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

</RelativeLayout>