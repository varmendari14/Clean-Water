<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.otteramazement.clean_water.AppActivity">

    <ImageView android:id="@+id/appscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@mipmap/app_activity_bkg3"
        android:scaleType="centerCrop"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/app_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/buttonLayout"
                android:layout_alignRight="@+id/buttonLayout"
                android:background="@drawable/button_phases"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/button_phases"
                android:id="@+id/app_profile_imageView"
                android:alpha=".75"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/app_profile_button" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/button_phases"
                android:id="@+id/app_water_imageView"
                android:alpha=".75"
                android:layout_below="@+id/app_profile_imageView"
                android:layout_centerHorizontal="true" />


            <Button
                    android:id="@+id/app_water_button"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/buttonLayout"
                    android:layout_alignRight="@+id/buttonLayout"
                    android:background="@drawable/button_phases"/>


                    <Button
                        android:id="@+id/app_manage_button"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_alignLeft="@+id/buttonLayout"
                        android:layout_alignRight="@+id/buttonLayout"
                        android:background="@drawable/button_phases"/>

            <Button
                android:id="@+id/app_historical_button"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/buttonLayout"
                android:layout_alignRight="@+id/buttonLayout"
                android:background="@drawable/button_phases"/>

                <Button
                    android:id="@+id/app_logout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/buttonLayout"
                    android:layout_alignRight="@+id/buttonLayout"
                    android:background="@drawable/button_phases"/>

                <LinearLayout
                    android:id="@+id/buttonLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/button_phases"
                android:id="@+id/app_logout_imageView"
                android:alpha=".75"
                android:layout_below="@+id/app_manage_textView"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/button_phases"
                android:id="@+id/app_historical_imageView"
                android:alpha=".75"
                android:layout_below="@+id/app_water_imageView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/button_phases"
                android:id="@+id/app_manage_imageView"
                android:alpha=".75"
                android:layout_below="@+id/app_historical_textView"
                android:layout_toEndOf="@+id/app_profile_button" />

            <TextView
                    android:text="Logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_logout_textView"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:fontFamily="sans-serif"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:alpha=".75"
                android:layout_below="@+id/app_manage_imageView"
                android:layout_marginTop="29dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Manage Users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_manage_textView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:alpha=".75"
                android:layout_marginBottom="32dp"
                android:layout_alignBottom="@+id/app_manage_imageView"
                android:layout_alignStart="@+id/app_logout_textView" />

            <TextView
                android:text="Water Report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_water_textView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:alpha=".75"
                android:layout_marginBottom="33dp"
                android:layout_alignBottom="@+id/app_water_imageView"
                android:layout_alignStart="@+id/app_manage_textView" />

            <TextView
                android:text="Edit Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_profile_textView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:alpha=".75"
                android:layout_alignBottom="@+id/app_profile_button"
                android:layout_alignStart="@+id/app_water_textView"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="Historical Report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_historical_textView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:alpha=".75"
                android:layout_marginBottom="35dp"
                android:layout_alignBottom="@+id/app_historical_imageView"
                android:layout_alignStart="@+id/app_manage_textView" />

        </RelativeLayout>



</RelativeLayout>