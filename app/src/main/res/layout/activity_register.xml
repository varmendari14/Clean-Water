<?xml version="1.0" encoding="utf-8"?>

<!-- Author: Violet Armendariz -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.otteramazement.clean_water.RegisterActivity">

    <ImageView android:id="@+id/registerscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@mipmap/registration_bkg"
        android:scaleType="centerCrop"/>


    <Button
        android:id="@+id/register_registerbutton"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/buttonLayout"
        android:layout_alignRight="@+id/buttonLayout"
        android:background="@drawable/button_phases"/>


    <ImageView
        android:id="@+id/register_imageView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/button_phases"
        android:alpha=".75"
        android:layout_marginEnd="127dp"
        android:layout_alignTop="@+id/register_backbuttonimageView"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/register_backbutton"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/buttonLayout"
        android:layout_alignRight="@+id/buttonLayout"
        android:background="@drawable/back_button"
        android:src="@drawable/backbutton_phases"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/register_backbutton_textView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:alpha=".75"/>

    <TextView
        android:id="@+id/register_registerbutton_textView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Register"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:alpha=".75"
        android:layout_alignTop="@+id/register_imageView"
        android:layout_toStartOf="@+id/register_backbutton_textView"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/register_backbuttonimageView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/backbutton_phases"
        android:alpha=".75"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="47dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/register_backbutton_textView" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/register_name_input"
        android:textSize="24sp"
        android:hint="Name"
        android:layout_alignBaseline="@+id/register_name_textView"
        android:layout_alignBottom="@+id/register_name_textView"
        android:layout_alignStart="@+id/register_username_input"
        android:textAlignment="textStart" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_retypepass_textView"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/register_retype_textView"
        android:layout_alignParentStart="true"
        android:textColor="#FF152A25" />

    <TextView
        android:text="Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_type_textView"
        android:textSize="24sp"
        android:layout_above="@+id/register_imageView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:textStyle="normal|bold"
        android:textColor="#FF152A25" />

    <TextView
        android:text="Re-Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_retype_textView"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/register_retypepassword_input"
        android:layout_alignParentStart="true"
        android:textColor="#FF152A25" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_retypepassword_input"
        android:hint="Password"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/register_password_input" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_password_textView"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/register_password_input"
        android:layout_alignBottom="@+id/register_password_input"
        android:layout_alignParentStart="true"
        android:textColor="#FF152A25" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_password_input"
        android:hint="Password"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/register_retypepassword_input"
        android:layout_alignStart="@+id/register_username_input" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/register_username_input"
        android:textSize="24sp"
        android:hint="Username"
        android:textAlignment="textStart"
        android:layout_below="@+id/register_backbutton_textView"
        android:layout_toEndOf="@+id/register_username_textView" />

    <TextView
        android:text="Username:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_username_textView"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/register_username_input"
        android:layout_alignBottom="@+id/register_username_input"
        android:layout_alignParentStart="true"
        android:textColorHint="#FF152A25"
        android:textColor="#FF152A25" />

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_name_textView"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/register_registerbutton"
        android:layout_alignBottom="@+id/register_registerbutton"
        android:layout_toEndOf="@+id/register_registerbutton"
        android:textColorLink="@android:color/holo_green_light"
        android:textColor="#FF152A25" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_typeSpinner"
        android:alpha=".75"
        android:textAlignment="center"
        android:popupBackground="@color/colorAccent"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_alignBottom="@+id/register_type_textView"
        android:layout_alignParentStart="true" />


</RelativeLayout>